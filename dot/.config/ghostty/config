# Ghostty can reload the configuration while running by using the menu
# Control + Shift + comma on other platforms). Not all config options can be
shell-integration = zsh
font-family = "JetBrainsMono Nerd Font Mono"
copy-on-select = "clipboard"
mouse-hide-while-typing = true
scrollback-limit = 1000000
theme = Rose Pine

keybind = ctrl+n=new_window

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = ctrl+a>h=new_split:left
keybind = ctrl+a>j=new_split:down
keybind = ctrl+a>k=new_split:up
keybind = ctrl+a>l=new_split:right
keybind = ctrl+a>f=toggle_split_zoom
keybind = ctrl+a>w=close_surface

keybind = ctrl+a>l=next_tab
keybind = ctrl+a>h=previous_tab

keybind = ctrl+a>r=prompt_surface_title
keybind = ctrl+a>t=new_tab

window-save-state = always
